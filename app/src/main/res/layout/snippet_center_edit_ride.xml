<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            android:id="@+id/congratulation_card"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profileLayout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:id="@+id/car_image"
                        android:src="@drawable/car_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/usernameTxt"
                        android:layout_marginLeft="80dp"
                        android:text="Username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:id="@+id/carEditText"
                        android:text="Car name"
                        android:layout_below="@id/usernameTxt"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkgrey"
                        android:id="@+id/licencePlateEditText"
                        android:text="Registration"
                        android:layout_below="@id/carEditText"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:layout_alignParentRight="true"
                        android:textSize="13sp"
                        android:textColor="@color/darkgrey"
                        android:id="@+id/seatsEditText"
                        android:text="3 Seats left!" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/costLayout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/costHeadingTxt"
                        android:text="Cost (£)" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/costEditText"
                        android:hint="£££"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/ridersHeadingTxt"
                        android:text="Date of journey"
                        android:layout_marginLeft="150dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:focusedByDefault="false"
                        android:textSize="17sp"
                        android:id="@+id/DateOfJourneyEditText"
                        android:hint="Tap for date"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="20dp" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time2Layout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/pickupLocationTxt"
                        android:text="Pick up location" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/pickupLocationEditText"
                        android:background="@android:color/transparent"
                        android:focusedByDefault="false"
                        android:hint="Tap for location"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickupLayout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/departureTxt"
                        android:text="Pick up time" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/pickupEditText"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:hint="Tap for time"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="150dp"
                        android:id="@+id/extraTimeAddedTxt"
                        android:text="Extra time added" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/extraTimeEditText"
                        android:hint="Enter extra time"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="20dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/destinationLayout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="130dp"
                        android:id="@+id/profile_logo"
                        android:background="@drawable/destination_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/locationTxt"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="From:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_below="@id/locationTxt"
                        android:id="@+id/destinationEditText"
                        android:layout_marginLeft="30dp"
                        android:text="Location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/destinationTxt"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="180dp"
                        android:text="To:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_below="@id/locationTxt"
                        android:id="@+id/fromEditText"
                        android:layout_marginLeft="180dp"
                        android:text="Location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/durationTxt"
                        android:layout_marginLeft="30dp"
                        android:text="Duration: 1 hour 14 mins" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeLayout"
                    android:background="@drawable/white_border_bottom"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/sameGenderTxt"
                        android:text="Same gender" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderSwitch"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="150dp"
                        android:id="@+id/maxLugageTxt"
                        android:text="Maxiumum luggage (kg)" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/luggageEditText"
                        android:hint="Enter luggage"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:layout_marginLeft="150dp"
                        android:inputType="number"
                        android:layout_marginTop="20dp" />
                </RelativeLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit ride"
                    android:id="@+id/snippetOfferRideButton"
                    android:clickable="false"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_style" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</merge>